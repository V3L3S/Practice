@model IEnumerable<PracticeShop.Models.Game>;

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <table class="table">
        <tr>
            <td>
                <p>Название игры</p>
            </td>
            <td>
                <p>Жанр</p>
            </td>
            <td>
                <p>Издатель</p>
            </td>
            <td>
                <p>Цена в $</p>
            </td>
            <td>
                <p>

                </p>
            </td>
        </tr>
        @foreach (var game in Model)
        {
            <tr>
                <td>
                    <p>@game.Name</p>
                </td>
                <td>
                    <p>@game.Genre</p>
                </td>
                <td>
                    <p>@game.Publisher</p>
                </td>
                <td>
                    <p>@game.Price</p>
                </td>
                <td>
                    @if (game.Price > 0)
                    {
                        <form method="post" asp-controller="Store" asp-action="BuyGame">
                            @Html.Hidden("gameID", game.ID)
                            <input type="submit" value="Купить" />
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-controller="Store" asp-action="AddToLibrary">
                            @Html.Hidden("gameID", game.ID)
                            <input type="submit" value="Добавить в библиотеку" />
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</div>