<!DOCTYPE html>
<html>
<head>
    <title>Game Store</title>
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="stylesheet" href="~/css/index.css">
    <script src="~/js/index.js"></script>
    @*<link href="https://allfont.ru/allfont.css?fonts=squealer-embossed" rel="stylesheet" type="text/css" />*@
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <a href="#"><img class="logo" src="~/image/logo.png"></a>
        <div class="dropdown">
            <button class="dropbtn">MENU</button>
            <div class="dropdown-content menu">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">SEARCH</button>
            <form class="dropdown-content">
                <input type="search" name="search" placeholder="search">
            </form>
        </div>
        <div class="dropdown login">
            <button class="dropbtn search">LOGIN</button>
            <form class="dropdown-content login">
                <input type="text" name="login" placeholder="Login">
                <input type="password" name="password" placeholder="Password">
                <a href="#">Register</a>
            </form>
        </div>
    </header>
    <div>
        <div class="tag">
            <img src="~/image/tag.png">
            <p>GAMES ARE RELIGION</p>
        </div>

        <div class="main">
            <aside class="side-l">
                <div class="side-div">

                    <!-- вот место для контента пидор -->

                </div>
                <img src="~/image/side.png">
            </aside>
            <main>

                <!-- и вот место для ктаблици пидор, потом стиль для нее сделаю гондон -->
                @RenderBody();

            </main>
            <aside class="side-r">
                <div class="side-div">

                    <!--и вот блять место для контента пидор -->

                </div>
                <img src="~/image/side.png">
            </aside>
        </div>
    </div>
    <footer>
    </footer>
</body>
</html>

